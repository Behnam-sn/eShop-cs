{
  "ConnectionStrings": {
    "Database": "Host=eshop-db;Port=5432;Database=eshop;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [
      "FormLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "MessageBroker": {
    "Host": "amqp://eshop-queue:5672",
    "Username": "guest",
    "Password": "guest"
  }
}